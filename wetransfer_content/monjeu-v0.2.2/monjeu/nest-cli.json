{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "deleteOutDir": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "workers": {
      "type": "application",
      "root": "apps/workers",
      "entryFile": "main",
      "sourceRoot": "apps/workers/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "combat": {
      "type": "library",
      "root": "libs/combat",
      "entryFile": "index",
      "sourceRoot": "libs/combat/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "game-data": {
      "type": "library",
      "root": "libs/game-data",
      "entryFile": "index",
      "sourceRoot": "libs/game-data/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
